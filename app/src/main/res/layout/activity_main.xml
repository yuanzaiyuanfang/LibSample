<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/delive_height"
        android:background="@color/line_color" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_light"
        android:paddingTop="2dp"
        android:paddingBottom="@dimen/dp4"
        app:tl_iconMargin="-2dp"
        app:tl_textSelectSize="@dimen/sp12"
        app:tl_textUnselectSize="10sp"
        app:tl_iconHeight="@dimen/dp28"
        app:tl_iconWidth="@dimen/dp28"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/text3"
        app:tl_underline_height="0dp">

    </com.flyco.tablayout.CommonTabLayout>
</LinearLayout>