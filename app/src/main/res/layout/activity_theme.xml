<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText=""
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/sp18"
        app:centerType="textView"
        app:leftImageResource="@mipmap/back_white"
        app:leftType="imageButton"
        app:rightType="none"
        app:statusBarColor="@color/colorPrimary"
        app:statusBarMode="light"
        app:titleBarColor="@color/colorPrimary"
        app:titleBarHeight="@dimen/dp44">

    </com.wuhenzhizao.titlebar.widget.CommonTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_hint"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp24"
            android:text="标题"
            android:textColor="@color/text1"
            android:textSize="@dimen/sp20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp24"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp24"
            android:text="切换"
            android:textColor="@color/split_bar_color" />

        <TextView
            android:id="@+id/moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/split_bar_color"
            android:padding="@dimen/dp24"
            android:text="默认"
            android:textColor="@color/text1" />

        <com.yzyfdf.library.view.SettingView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/bg_light"
            app:l_text_color="@color/text1"
            app:left_text="ssssssssssssssssssss" />

    </LinearLayout>


</LinearLayout>